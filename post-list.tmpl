{{- define "post-list" -}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1" name="viewport">
  <meta name="author" content="Roman Kashitsyn">
  <title>{{ .Title }}</title>
  <link rel="stylesheet" href="/css/tufte.css">
  <link rel="icon" href="/images/favicon.svg">
  <link rel="mask-icon" href="/images/mask-icon.svg" color="#000000">
  <link rel="alternate" type="application/atom+xml" href="/feed.xml">
</head>
<body>
<article>
{{- template "header" -}}
<hr>
{{ if .Articles }}
<ul class="posts">
{{ range .Articles }}
<li itemscope="" itemtype="https://schema.org/CreativeWork">
  <meta keywords="{{ StringsJoin .Keywords "," }}">
  <h2 class="article-title"><a href="{{ .URL }}"><span itemprop="headline">{{ .Title }}</span></a></h2>
  <div class="article-abstract" itemprop="abstract">{{ .Subtitle }}</div>
  <span class="publish-date">
    <span title="Publish date">✏ <span itemprop="datePublished">{{ FormatDate .CreatedAt }}</span></span>
    &nbsp;
    <span title="Last modified">✂ <span itemprop="dateModified">{{ FormatDate .ModifiedAt }}</span></span>
  </spane>
</li>
{{ end }}
</ul>
{{ end }}

<hr>
{{- template "footer" -}}
</article>
</body>
</html>
{{- end -}}
